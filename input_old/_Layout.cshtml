@{
    Layout = "/_Master.cshtml";
    ViewData[Keys.Title] = @Model.GetString(Keys.Title);
}

@section Infobar {	
    @if (IsSectionDefined("Infobar")) {
        RenderSection("Infobar");
    }
    else { 			
        @Html.Partial("_Infobar") 
    } 
}

@section Search {
    @if (IsSectionDefined("Search")) {
        RenderSection("Search");
    }
}

@section Sidebar {
    @if (IsSectionDefined("Sidebar")) {
        RenderSection("Sidebar");
    }
    else { 		
        @Html.Partial("Sidebar/_ChildPages") 
    }
}

@if(/*Model.GetBool(DocsKeys.NoContainer, */false)//)
{
    @RenderBody()
}
else
{
    @if(!/*Model.GetBool(Keys.NoTitle, */false)//)
    {
        <section class="content-header">
            <h1>@ViewData[Keys.Title]</h1>
        </section>
    }
    <section class="content">
        @RenderBody()
    </section>
}